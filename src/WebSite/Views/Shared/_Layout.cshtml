@{
    ViewData["Year"] = DateTime.UtcNow.Year;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tomasz Juszczak</title>

    @{ Html.RenderPartial("../../RazorControllers/_Head.cshtml"); }
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body ng-app data-spy="scroll" data-target=".navbar" data-offset="50">
    @RenderSection("navbarTop", false)
    <nav class="navbar navbar-inverse" data-spy="affix" data-offset-top="@ViewData["NavbarTopSize"]">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Tomasz Juszczak</a>
            </div>
            <div style="float: right; padding-right: 30px">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        @{ Html.RenderPartial("_Footer.cshtml"); }
    </div>

    @{ Html.RenderPartial("../../RazorControllers/_Scripts.cshtml"); }
    @RenderSection("scripts", required: false)
</body>
</html>
